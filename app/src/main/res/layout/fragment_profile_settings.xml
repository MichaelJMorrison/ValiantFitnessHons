<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileSettingsFragment" >

    <!--https://stackoverflow.com/questions/3276380/android-word-wrap-edittext-text CREDIT -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnPictureSelect"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="@string/app_name"

            tools:src="@tools:sample/avatars" />

        <EditText
            android:id="@+id/txtEditUserName"
            android:layout_width="222dp"
            android:layout_height="75dp"
            android:ems="10"
            android:hint="Username"
            android:inputType="text" />

        <EditText
            android:id="@+id/txtEditName"
            android:layout_width="222dp"
            android:layout_height="75dp"
            android:ems="10"
            android:hint="Name"
            android:inputType="text" />

        <EditText
            android:id="@+id/txtEditBio"
            android:layout_width="373dp"
            android:layout_height="234dp"
            android:ems="10"
            android:hint="Biography"
            android:inputType="textMultiLine"
            android:maxLength="140"
            android:maxLines="40"
            android:scrollHorizontally="false" />
    </LinearLayout>

    <Button
        android:id="@+id/btnProfileSave"
        android:layout_width="111dp"
        android:layout_height="56dp"
        android:text="SAVE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.945" />

    <Button
        android:id="@+id/btnProfileWipe"
        android:layout_width="111dp"
        android:layout_height="56dp"
        android:text="WIPE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnProfileCancel"
        app:layout_constraintStart_toEndOf="@+id/btnProfileSave"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.945" />

    <Button
        android:id="@+id/btnProfileCancel"
        android:layout_width="111dp"
        android:layout_height="56dp"
        android:text="CANCEL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.946"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.945" />

</androidx.constraintlayout.widget.ConstraintLayout>